{
  "version": 2,
  "builds": [
    {
      "src": "backend/**/*.php",
      "use": "@vercel/php"
    },
    {
      "src": "frontend/**/*",
      "use": "@vercel/static-build"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "backend/public/$1"
    },
    {
      "src": "/(.*)",
      "dest": "frontend/public/$1"
    }
  ]
}
